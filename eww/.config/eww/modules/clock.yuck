(defvar date_reveal false)

(defwidget clock-widget []
  (eventbox
    :onhover "${EWW_CMD} update date_reveal=true"
    :onhoverlost "${EWW_CMD} update date_reveal=false"
    (overlay
      :class "module"
      (box
        :space-evenly false
        (label
          :text {time.hour}
        :class "hour")
        (label
          :class "time-delimiter"
        :text "ï…‚")
        (label
          :text {time.minute}
        :class "minute"))
      (revealer
        :reveal date_reveal
        (button
          :class "date"
          :onclick "${EWW_CMD} open --toggle calendar-window"
        {time.date})))))
