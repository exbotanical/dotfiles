(defwidget brightness-widget []
  (box
    :class "module"
    (eventbox
      :onscroll "echo {} | sed -e 's/up/-U 1/g' -e 's/down/-A 1/g' | xargs light"
      (label
        :text {brightness.icon}
        :class "brightness-icon icon"
        :tooltip "brightness ${round(brightness.level, 0)}%"))))
