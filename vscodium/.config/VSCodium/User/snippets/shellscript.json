{
  "BashShebang": {
    "prefix": "shebang",
    "body": "${1|#!/usr/bin/env bash,#!/bin/sh|}\n"
  },
  "BashHereDoc": {
    "prefix": "heredoc",
    "body": ["cat <<END\n\nEND"]
  },
  "if": {
    "prefix": "if",
    "body": "if [[ ${0:condition} ]]; then\n\t${1}\nfi"
  },
  "case": {
    "prefix": "case",
    "body": "case \"$${0:VAR}\" in\n\t${1:1}) echo 1\n\t;;\n\t${2:2|3}) echo 2 or 3\n\t;;\n\t*) echo default\n\t;;\nesac\n"
  },
  "function": {
    "prefix": "function",
    "body": "${1:name} () {\n\t${0}\n}"
  },
  "for_in": {
    "prefix": "for_in",
    "body": "for ${0:VAR} in $${1:LIST}; do\n\techo \"$${0:VAR}\"\ndone\n"
  },
  "for_i": {
    "prefix": "for_i",
    "body": "for ((${0:i} = 0; ${0:i} < ${1:10}; ${0:i}++)); do\n\techo \"$${0:i}\"\ndone\n"
  },
  "while": {
    "prefix": "while",
    "body": "while [[ ${1:condition} ]]; do\n\t${0}\ndone\n"
  },
  "until": {
    "prefix": "until",
    "body": "until [[ ${1:condition} ]]; do\n\t${0}\ndone\n"
  },
  "read": {
    "prefix": "read",
    "body": "read -r ${0:VAR}"
  },
  "shellcheck_aliases": {
    "prefix": "shellcheck",
    "body": [
      "alias it='(_shpec_failures=0; alias setup=setup &>/dev/null && { setup; unalias setup; alias teardown=teardown &>/dev/null && trap teardown EXIT ;}; it'",
      "# shellcheck disable=SC2154",
      "alias ti='return \"$_shpec_failures\"); (( _shpec_failures += $?, _shpec_examples++ ))'",
      "alias end_describe='end; unalias setup teardown 2>/dev/null'"
    ]
  },
  "shellcheck_describe": {
    "prefix": "describe",
    "body": "describe ''\n\nend_describe"
  },
  "shellcheck_test": {
    "prefix": "test",
    "body": "it ''\n\nti"
  }
}
