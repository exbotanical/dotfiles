{
  /**
   * VSC Settings
   */
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.codeActionsOnSave": {},
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "files.eol": "\n",

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "extensions.ignoreRecommendations": false,

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.html": "html",
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.h": "c",
    "*.bash": "shellscript",
    "*.S": "gas",
    "*.asm": "asm-intel-x86-generic",
    ".vimrc": "viml"
  },

  "liveServer.settings.donotShowInfoMsg": true,

  "security.workspace.trust.enabled": false,

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.tabs.showActiveTerminal": "always",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/opt/homebrew/bin/bash"
    }
  },
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.openFoldersInNewWindow": "on",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "native",
  "window.newWindowDimensions": "inherit",
  "window.menuBarVisibility": "hidden",
  "editor.rulers": [80],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "none",

  /**
   * LSP Configurations
   */

  "go.languageServerExperimentalFeatures": {
    "diagnostics": true // for diagnostics as you type
  },
  "go.coverShowCounts": true,
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "usePlaceholders": false // add parameter placeholders when completing a function
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4
  },

  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "[rust]": {
    "editor.tabSize": 4
  },

  "clang-format.executable": "/usr/bin/clang-format",
  "clang-format.style": "file",
  "clang-format.language.c.enable": true,
  "[c]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },

  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "${workspaceFolder}/deps"
  ],
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google }",
  "[cpp]": {},

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--skip-string-normalization"],
  "python.terminal.activateEnvironment": false,
  "[python]": {},

  "redhat.telemetry.enabled": false,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-22",
      "path": "/usr/lib/jvm/java-22-openjdk",
      "default": true
    }
  ],
  "java.configuration.updateBuildConfiguration": "disabled",
  "java.format.settings.url": "~/.vscode/java-google-style.xml",
  "java.maven.downloadSources": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },

  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[shellscript]": {},

  "haskell.manageHLS": "GHCup",
  "[haskell]": {
    "editor.formatOnSave": true
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },

  /**
   * Misc / Extension Settings
   */
  "everforest.darkContrast": "hard",
  "everforest.darkCursor": "orange",
  "everforest.darkWorkbench": "high-contrast",
  "everforest.highContrast": true,

  "glassit.alpha": 245,

  "npm.keybindingsChangedWarningShown": true,
  "editor.largeFileOptimizations": false,
  "vitest.enable": true,
  "cSpell.ignoreWords": ["goldmund"],
  "cSpell.diagnosticLevel": "Hint",
  "doxdocgen.generic.dateFormat": "DD/MM/YYYY",
  "doxdocgen.generic.briefTemplate": "{text}",
  "python.defaultInterpreterPath": "/usr/bin/python",
  "workbench.colorCustomizations": {
    "list.errorForeground": "#68a274"
  },
  "window.zoomLevel": 1,
  "prisma.showPrismaDataPlatformNotification": false,
  "telemetry.telemetryLevel": "off",
  "update.showReleaseNotes": false,
  "workbench.editor.tabSizing": "fixed",
  "window.density.editorTabHeight": "compact",
  "cursor-column.showBorder": true,
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Dracula Theme",
  "cSpell.userWords": [
    "CSRCS",
    "DEPSDIR",
    "EFLAGS",
    "ERRCODE",
    "exbotanical",
    "gdtr",
    "Hubspot",
    "lgdt",
    "libtap",
    "ljmp",
    "moodle",
    "movl",
    "movw",
    "multiboot",
    "pagedir",
    "popl",
    "pushl",
    "TESTDIR",
    "TESTSRCS",
    "vgaprintf"
  ],
  "workbench.activityBar.location": "hidden",
  "git.openRepositoryInParentFolders": "never"
}
