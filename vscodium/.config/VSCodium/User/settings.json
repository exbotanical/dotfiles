{
  /**
   * VSC Settings
   */

  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "editor.codeActionsOnSave": {},
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": "400",
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "files.eol": "\n",

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "extensions.ignoreRecommendations": false,

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.html": "html",
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.h": "c",
    "*.bash": "shellscript",
    ".vimrc": "viml"
  },

  "liveServer.settings.donotShowInfoMsg": true,

  "security.workspace.trust.enabled": false,

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.tabs.showActiveTerminal": "always",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontFamily": "Inconsolata",
  "terminal.integrated.fontWeight": "700",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.openFoldersInNewWindow": "on",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "native",
  "window.newWindowDimensions": "inherit",
  "window.menuBarVisibility": "hidden",
  "editor.rulers": [80],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,

  /**
   * LSP Configurations
   */

  "go.languageServerExperimentalFeatures": {
    "diagnostics": true // for diagnostics as you type
  },
  "go.coverShowCounts": true,
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "usePlaceholders": false // add parameter placeholders when completing a function
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.tabSize": 4
  },

  "[c]": {},

  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "${workspaceFolder}/deps"
  ],
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google }",
  "[cpp]": {},

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--skip-string-normalization"],
  "python.terminal.activateEnvironment": false,
  "[python]": {},

  "redhat.telemetry.enabled": false,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-19",
      "path": "/usr/lib/jvm/java-19-openjdk",
      "default": true
    }
  ],
  "java.configuration.updateBuildConfiguration": "disabled",
  "java.format.settings.url": "~/.vscode/java-google-style.xml",
  "java.maven.downloadSources": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },

  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[shellscript]": {},

  "haskell.manageHLS": "PATH",
  "[haskell]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "on"
  },

  "[html]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },

  /**
   * Misc / Extension Settings
   */

  "everforest.darkContrast": "hard",
  "everforest.darkCursor": "orange",
  "everforest.darkWorkbench": "high-contrast",
  "everforest.highContrast": true,

  "glassit.alpha": 245,

  "npm.keybindingsChangedWarningShown": true,
  "editor.largeFileOptimizations": false,
  "vitest.enable": true,
  "window.zoomLevel": 2,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "night nord theme"
}
