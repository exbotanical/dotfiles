{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "polar": "#e67e80",
    "blue": "#7fbbb3",
    "orange": "#dbbc7f",
    "text": "#3B4252",
    "green": "#83c092",
    "pink": "#a7c080",
    "red": "#e67e80",
    "purple": "#a78fa2",
    "yellow": "#a7c080"
  },
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "p:polar",
          "foreground": "p:text",
          "properties": {
            "arch": "\uf303",
            "linux": "\ue712",
            "macos": "\ue711",
            "ubuntu": "\uf31c"
          },
          "style": "diamond",
          "leading_diamond": "<p:pink>\u256d\u2500\ue0b2</>",
          "template": " {{ .Icon }} ",
          "type": "os"
        },

        {
          "background": "p:blue",
          "foreground": "p:text",
          "properties": {
            "max_depth": 3,
            "folder_icon": "\uf115 ",
            "folder_separator_icon": "/",
            "home_icon": "\uf7db ",
            "style": "full"
          },
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " <p:text>\uf07b \uf553</> {{ .Path }} ",

          "type": "path"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:orange{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:purple{{ end }}",
            "{{ if gt .Behind 0 }}p:purple{{ end }}"
          ],
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "branch_icon": "\ue725 ",
            "branch_identical_icon": "\u2261",
            "branch_behind_icon": "\u2193",
            "branch_gone_icon": "\uf655"
          },
          "style": "diamond",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} <transparent>\ue0b1</> <p:text>\uf044 {{ .Working.String }}</>{{ end }}{{ if .Staging.Changed }} <transparent>\ue0b1</> <p:text>\uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} <transparent>\ue0b1</> <p:text>\uf692 {{ .StashCount }}</>{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "p:polar",
          "foreground": "p:text",
          "properties": {
            "style": "austin",
            "always_enabled": true
          },
          "invert_powerline": true,
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "background_templates": ["{{ if gt .Code 0 }}p:red{{ end }}"],
          "template": "<p:text></> \uf469 ",
          "type": "exit"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "invert_powerline": true,
          "style": "diamond",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "trailing_diamond": "\ue0b0",
          "type": "node"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "invert_powerline": true,
          "style": "diamond",
          "template": " \ue71e {{ .Full }} ",
          "trailing_diamond": "\ue0b0",
          "type": "npm"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "invert_powerline": true,
          "style": "diamond",
          "template": " \uFCD1 {{ .Full }} ",
          "trailing_diamond": "\ue0b0",
          "type": "go"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "invert_powerline": true,
          "style": "diamond",
          "template": " \uE738 {{ .Full }}",
          "trailing_diamond": "\ue0b0",
          "type": "java"
        },
        {
          "background": "p:green",
          "foreground": "p:text",
          "invert_powerline": true,
          "style": "diamond",
          "template": " \uE235 {{ .Full }} ",
          "trailing_diamond": "\ue0b0",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:pink",
          "style": "plain",
          "template": "\u2570\u2500 <b>{{ .UserName }}</b> <p:yellow>\u276f</><p:red>\u276f</><p:blue>\u276f</>",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
