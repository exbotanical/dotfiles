{
  "include": ["*.ts", "*.json", "src/index.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
